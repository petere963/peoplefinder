<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bin</id>
    <baseDirectory></baseDirectory>
    <formats>
        <format>tar</format>
    </formats>
    <!--<files>
        <file>
            <source>.env.deploy</source>
            <outputDirectory>/</outputDirectory>
            <destName>.env</destName>
        </file>
    </files> -->
       <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
           <directory>target</directory>
           <outputDirectory>/</outputDirectory>
           <includes>
               <include>/${artifactId}-${project.version}.jar</include>
           </includes>
        </fileSet>
        <fileSet>
           <directory>target/properties</directory>
           <outputDirectory>/properties</outputDirectory>
        </fileSet>
           <fileSet>
               <directory>target/keys</directory>
               <outputDirectory>/keys</outputDirectory>
           </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>.git</exclude>
                <exclude>.gitignore</exclude>
                <exclude>**/test/**</exclude>
                <exclude>**/app/data/**</exclude>
                <exclude>*.lock</exclude>
                <exclude>pom.xml</exclude>
                <exclude>assembly.xml</exclude>
                <exclude>**/target/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>